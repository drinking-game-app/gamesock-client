{
    "compilerOptions": {
        "module": "ES6",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "lib",
        "baseUrl": ".",
        "strict": true,
        "resolveJsonModule": true,
        "allowJs":true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*","src/tsLib/*"]
}